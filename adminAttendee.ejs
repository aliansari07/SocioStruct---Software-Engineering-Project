<!DOCTYPE html>
<html lang="en">
<head>
  <title>Participants Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="content-area">
    <h2>Event Attendees Management</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Event ID</th>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (data && data.length > 0) { %>
          <% data.forEach((attendee) => { %>
            <tr>
              <td><%= attendee.attendee_id %></td>
              <td><%= attendee.event_id %></td>
              <td><%= attendee.attendee_name %></td>
              <td><%= attendee.attendee_phone %></td>
              <td><%= attendee.attendee_email %></td>
              <td>
                <a href="/attendees/<%= attendee.attendee_id %>/edit" class="btn btn-info btn-sm">Edit</a>
                <form action="/admin/attendees/delete/<%= attendee.attendee_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this attendee?');">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="6" class="text-center">No participants found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <div class="button-container">
      <a href="/attendees/add" class="btn btn-primary">
        Add Participant
      </a>

      <!-- Add Participant Modal -->

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"></script>
</body>
</html>
