<body>
  <div class="content-area">
    <h2>Team Members Management</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Member ID</th>
          <th>Roll No</th>
          <th>Name</th>
          <th>Phone</th>
          <th>Deparment</th>
          <th>Position</th>
          <th>Society ID</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (data && data.length > 0) { %>
          <% data.forEach((member) => { %>
            <tr>
              <td><%= member.member_id %></td>
              <td><%= member.roll_no %></td>
              <td><%= member.name %></td>
              <td><%= member.phone %></td>
              <td><%= member.Department %></td>
              <td><%= member.position %></td>
              <td><%= member.society_id %></td>
              <td>
                <a href="/teamMembers/<%= member.member_id %>/edit" class="btn btn-info btn-sm">Edit</a>
                <form action="/admin/members/delete/<%= member.member_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this member?');">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-center">No team members found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <div class="button-container">
